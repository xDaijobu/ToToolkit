    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Padding="10"
    HorizontalOptions="FillAndExpand"
    VerticalOptions="FillAndExpand">
    <Grid>
        <Image
            x:Name="imageView"
            Aspect="AspectFit"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <Path
