            Fill="White"
            HeightRequest="25"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            WidthRequest="25" />

        <Path
            x:Name="btnOk"
            xct:TouchEffect.HoveredOpacity="0.8"
            xct:TouchEffect.PressedOpacity="0.5"
            Aspect="Uniform"
            Data="M9,16.2L4.8,12l-1.4,1.4L9,19 21,7l-1.4,-1.4L9,16.2z"
            Fill="White"
            HeightRequest="25"
            HorizontalOptions="End"
            VerticalOptions="Start"
            WidthRequest="25" />
